<% include layout %>
<div class="container">

<form class="form-group" action="/shops/<%=Product._id%>/updateProduct?_method=put" method="post">
  <div class="form-row">
        <div class="col">
          <input type="text" class="form-control"  name="name" value="<%=Product.name%>" placeholder="Product name" required>
        </div>
  </div>
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control" name="typeOfProduct" placeholder="Product Type" value="<%=Product.typeOfProduct%>" required>
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control" name="image" placeholder="Product Image Url"required value="<%=Product.image%>">
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control" name="price" placeholder="Product Price" required value="<%=Product.price%>">
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control" name="quantity" placeholder="Product Quantity" required value="<%=Product.quantity%>">
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <input type="text" class="form-control" name="details" placeholder="Product details" required value="<%=Product.details%>">
    </div>
  </div>
  <input type="submit" class="btn btn-primary" value="Update Product">
</form>

</div>



<% include footer %>
