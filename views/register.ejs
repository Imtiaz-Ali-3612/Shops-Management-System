<% include layout %>

<div class="container" >

<h2 class="page-header">Register</h2>
<p>Please register using the form below</p>
<form method="post" action="/users/register" enctype="multipart/form-data">
  <div class="form-group">
    <label>Name</label>
    <input class="form-control" name="name" type="text" placeholder="Enter Name" />
  </div>
  <div class="form-group">
    <label>Email</label>
    <input class="form-control" name="email" type="email" placeholder="Enter Email" required>
  </div>
  <div class="form-group">
    <label>Username</label>
    <input class="form-control" name="username" type="text" placeholder="Enter Username" required>
  </div>
  <div class="form-group">
    <label>Password</label>
    <input class="form-control" name="password" type="password" placeholder="Enter Password" required>
  </div>
  <div class="form-group">
    <label>Confirm Password</label>
    <input class="form-control" name="password2" type="password" placeholder="Confirm Password" required>
  </div>
  <div class="form-group">
     <label for="exampleFormControlSelect1">Register As </label>
     <select class="form-control" id="exampleFormControlSelect1" name='isShopkeeper' required>
       <option>Customer</option>
       <option>Shopkeeper</option>
     </select>
   </div>
  <div class="form-group">
    <label>Profile Image</label>
    <input class="form-control" name="profileimage" type="file" />
  </div>
  <input class="btn btn-primary" type="submit" name="submit" value="Register" />
</form>
</div>

<% include footer %>
